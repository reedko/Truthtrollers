{
  "manifest_version": 3,
  "name": "Truthtrollers",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup-injector.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://localhost:5173/*", "http://localhost:5173/*"],
      "js": ["inject-extension-id.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/popup.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": []
}
