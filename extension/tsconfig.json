{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["chrome", "node"] // Add chrome types for the API
  },
  "include": ["src/**/*"]
}
