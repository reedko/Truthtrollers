{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2018"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["chrome", "node"] // Add chrome types for the API
  },
  "include": ["src/**/*"]
}
